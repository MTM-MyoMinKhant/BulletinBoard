<div class="middle">
  <h2>Change your password</h2>
  <div class="center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field row form-adj">
        <%= f.label :password , "Password :" , class: "col-md-4" %>
        <%= f.password_field :password, autocomplete: "new-password" , class: "col-md-8" %>
      </div>
    
      <div class="field row form-adj">
        <%= f.label :password_confirmation , "Password Confirmation :" , class: "col-md-6" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "col-md-6" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
</div>
