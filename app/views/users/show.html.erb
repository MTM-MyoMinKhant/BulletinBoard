<% if flash[:success] %>
  <div class="alert alert-success d-flex align-items-center" role="alert">
    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-check-circle-fill flex-shrink-0 me-2 icon-img" viewBox="0 0 16 16" role="img" aria-label="Warning:">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
    </svg>
    <div class="flex-grow-1">
      <%= flash[:success] %>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="middle">
  <h2>Profile</h2>
  <div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <div class="img-block">
              <img src="<%= @user.avatar %>" class="img-size">
            </div>
        </div>
        <div class="col-3">
            <p>No :</p>
            <p>Name :</p>
            <p>Email :</p>
            <p>Created User :</p>
            <p>Type :</p> 
            <p>Phone :</p>
            <p>Date Of Birth :</p>
            <p>Address :</p>
        </div>
        <div class="col-5">
            <p><%= @user.id %></p>
            <p><%= @user.name%></p>
            <p><%= @user.email%></p>
            <p>Zaw Zaw</p>
            <%if @user.role == 0%>
              <p>Admin</p>
            <%elsif @user.role == 1%>
              <p>User</p>
            <%else%>
              <p>Something Wrong</p>
            <%end %>
            <p><%= @user.phone%></p>
            <p><%= @user.dob%></p>
            <p><%= @user.address%></p>
            <%= link_to "Edit Profile", edit_user_path(@user.id), class: "btn btn-secondary" %>
            <%= link_to "Back", users_user_lists_users_path , class: "btn btn-secondary" %>
        </div>
    </div>
  </div>
</div>
