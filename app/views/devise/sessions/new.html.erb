<div class="middle">
  <h2>Log in</h2>
  <div class="center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field row form-adj">
        <%= f.label :email , "Email :" , class: "col-md-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-md-8" %>
        <% if resource.errors[:email].any? %>
            <p class="error"><%= resource.errors.full_messages_for(:email).first %></p>
        <% end %>
      </div>
    
      <div class="field row form-adj">
        <%= f.label :password , "Password :" , class: "col-md-4" %><br />
        <%= f.password_field :password, autocomplete: "current-password" , class: "col-md-8"  %>
        <% if resource.errors[:password].any? %>
            <p class="error"><%= resource.errors.full_messages_for(:password).first %></p>
        <% end %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field form-adj form-adj2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <%= link_to "forgotten password" , new_user_password_path , class: "right link2"%>
        </div>
      <% end %>

      <div class="field row form-adj">
        <a href="/users/sign_up" class="link2">Create Account? <i class="fa-solid fa-user-plus"></i></a>
      </div>
    
      <div class="actions">
        <%= f.submit "Log in" , class: "right login-btn" %>
      </div>
    <% end %>
  </div>
</div>
