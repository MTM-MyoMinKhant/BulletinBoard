<div class="middle2 clearfix">
    <h2>User Lists</h2>   
    <%= search_form_for @q do |f| %>
        <%= f.label :name_cont , "Name :" %>
        <%= f.search_field :name_cont %>
        <%= f.label :email_cont , "Email :" %>
        <%= f.search_field :email_cont %>
        <%= f.label :from_cont , "From :" %>
        <%= f.date_field :from_cont %>
        <%= f.label :to , "To :" %>
        <%= f.date_field :to %>
        <%= f.submit "Search" , class: "post-action-btn btn" %>
    <% end %>
    <table class="table post-table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Created User</th>
                <th scope="col">Type</th> 
                <th scope="col">Phone</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Address</th>
                <th scope="col">Operation</th>
            </tr>
        </thead>
        <tbody>
            <% @users_list.each do |user_list| %>
                <tr>
                    <td><%= user_list.id %></td>
                    <td><%= user_list.name %></td>
                    <td><%= user_list.email %></td>
                    <td>Zaw Zaw</td>
                    <td>
                        <% if user_list.role == 0 %>
                            Admin
                        <% elsif user_list.role == 1 %>
                            User
                        <% else %>
                            Undefined
                        <% end %>
                    </td>
                    <td>0<%= user_list.phone %></td>
                    <td><%= user_list.dob %></td>
                    <td><%= user_list.address %></td>
                    <td>
                        <%= button_tag "Detail", type: "button", id: "d2u-s" ,  class: "btn btn-success"%>
                        <%= button_tag "Delete", type: "button", id: "du-s" ,  class: "btn btn-danger"%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate @users_list %>
</div>

