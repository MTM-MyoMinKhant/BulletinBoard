<div class="middle">
  <h2>Forgot your password?</h2>
  <div class="center">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    
      <div class="field row form-adj">
        <%= f.label :email , "Email :" , class: "col-md-4" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-md-8" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
</div>
